@using Tionit.ShopOnline.Backoffice.Application.Queries.OrderItems.Models;

<TelerikGrid Class="order-item-grid" Data="@OrderItemModelList" TotalCount="@TotalCount" Height="300px" Pageable="true" Sortable="true"
             FilterMode="GridFilterMode.FilterRow" OnRead="@OnGridNeedItems">
    <GridColumns>
        <GridColumn Field="@(nameof(OrderItemModel.Name))" Title="Название"/>
        <GridColumn Field="@(nameof(OrderItemModel.Price))" Title="Цена"/>
        <GridColumn Field="@(nameof(OrderItemModel.Quantity))" Title="Количество(шт)"/>
    </GridColumns>
</TelerikGrid>